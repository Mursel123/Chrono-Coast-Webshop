<!doctype html>
<html lang="en">
  <head>
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <base href="~/" />

  </head>
  <body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="list-group">
                    <a asp-controller="Home" asp-action="BlazorProduct" class="list-group-item list-group-item-action">Products</a>
                    <a asp-controller="Home" asp-action="BlazorCategory" class="list-group-item list-group-item-action">Categories</a>
                    <a asp-controller="Account" asp-action="LogOut" class="list-group-item list-group-item-action">Log Out</a>
                </div>
            </div>
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                @RenderBody()
            </div>
            <script src="_framework/blazor.server.js"></script>
        </div>
    </div>
  </body>
</html>
