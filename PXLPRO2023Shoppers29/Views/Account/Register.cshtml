@model PXLPRO2023Shoppers29.Models.ViewModels.LoginViewModel
<!doctype html>
<html class="no-js" lang="zxx">

<body>
    <div class="wrapper bg--shaft">
        <div class="main-content-wrapper">
            <div class="about-area bg--dark-3">
                <div class="container-fluid p-0">
                    <div class="row no-gutters align-items-center">
                        <div class="col-xl-6">
                            <div class="row" style="padding-right: 10%; padding-left: 10%">
                                <div class="col-12">
                                   <h2 class="heading-secondary mb--30">Registration</h2>
                                    <form class="form" asp-controller="Account" asp-action="Register">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form__group mb--20">
                                            <label class="form__label" for="register_email">
                                                Email address <span>*</span>
                                            </label>
                                            <input type="text" asp-for="Email" id="register_email" class="form__input form__input--2">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form__group mb--20">
                                            <label class="form__label" for="register_password">
                                                Password <span>*</span>
                                            </label>
                                            <input type="password" asp-for="Password" id="register_password" class="form__input form__input--2">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form__group">
                                            <button type="submit" class="btn btn-5 btn-style-2">Register</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="img-box text-center">
                                <img src="~/assets/img/register/register-img.jpg" alt="about">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <a class="scroll-to-top" href=""><i class="fa fa-angle-double-up"></i></a>
    </div>
